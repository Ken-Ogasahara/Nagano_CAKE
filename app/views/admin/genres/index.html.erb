<% if @genre.errors.any? %>
  <div id="error_explanation">
    <h3>保存時に<%= @genre.errors.count %>件のエラーが発生しました。:</h3>
    <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :ジャンル名 %>
    <%= f.text_area :name, class: "form-control", required: true %>

    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>

<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id), method: :get, class: 'btn btn-sm btn-success' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

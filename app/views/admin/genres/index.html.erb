<% if @genre.errors.any? %>
  <div id="error_explanation">
    <h3>保存時に<%= @genre.errors.count %>件のエラーが発生しました。:</h3>
    <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="col-md-8 offset-md-3">
  <h1>ジャンル一覧・追加</h1>
</div>

<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <table class="col-md-3 offset-md-3">
    <tr>
      <td>
        <%= f.label :ジャンル名 %>
      </td>
      <td>
        <%= f.text_field :name, class: "form-control", required: true %>
      </td>
      <td>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </td>
    </tr>
  </table>
<% end %>

<br>

<table class="col-md-3 offset-md-3">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id), method: :get, class: 'btn btn-sm btn-success' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

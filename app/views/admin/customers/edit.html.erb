<% if @customer.errors.any? %>
  <div id="error_explanation">
    <h3>保存時に<%= @customer.errors.count %>件のエラーが発生しました。:</h3>
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <table>

    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>

    <tr>
      <td>氏名</td>
      <td><%= f.text_field :last_name, required: true, class: "form-control book_body" %></td>
      <td><%= f.text_field :first_name, required: true, class: "form-control book_body" %></td>
    </tr>

    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana, required: true, class: "form-control book_body" %></td>
      <td><%= f.text_field :first_name_kana, required: true, class: "form-control book_body" %></td>
    </tr>

    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code, required: true, class: "form-control book_body" %></td>
    </tr>

    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, required: true, class: "form-control book_body" %></td>
    </tr>

    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number, required: true, class: "form-control book_body" %></td>
    </tr>

    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email, required: true, class: "form-control book_body" %></td>
    </tr>

    <tr>
      <td>会員ステータス</td>
      <td>
        <div class="form-group">
          <div class="field">
            <%= f.radio_button :is_deleted, :false, checked: true %>
            <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
          </div>
        </div>
      </td>
    </tr>

  </table>

  <div class="form-group">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>

<% end %>




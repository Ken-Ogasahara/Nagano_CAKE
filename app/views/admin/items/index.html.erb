<div class="col-md-5 offset-md-3">
  <h1>商品一覧</h1>
</div>

<div class="col-md-5 offset-md-7">
  <%= link_to "+", new_admin_item_path, method: :get, class: 'btn btn-sm btn-dark' %>
</div>

<table class="col-md-3 offset-md-4">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>

        <td>
          <%= item.id %>
        </td>

        <td>
          <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
          <% end %>
        </td>

        <td>
          <%= item.price %>
        </td>

        <td>
          <%= Genre.find(item.genre_id).name %>
        </td>

        <% if item.is_active == true %>
          <td>販売中</td>
        <% else %>
          <td>販売停止中</td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<% if @item.errors.any? %>
  <div id="error_explanation">
    <h3>保存時に<%= @item.errors.count %>件のエラーが発生しました。:</h3>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>商品新規登録</h1>

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

  <div class="form-group">
    <div class="field">
      <%= f.label :商品画像 %>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :商品名 %>
      <%= f.text_field :name, required: true, class: "form-control book_body" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :商品説明 %>
      <%= f.text_area :introduction, required: true, class: "form-control book_body" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :ジャンル %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--", required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :税抜価格 %>
      <%= f.text_field :price, required: true, class: "form-control book_body" %>円
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :販売ステータス %>
      <%= f.radio_button :is_active, :true, checked: true %>
      <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>

<% end %>

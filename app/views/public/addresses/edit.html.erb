<div class="col-md-5 offset-md-3">
  <h1>配送先編集</h1>
</div>

<%= form_with model: @address, url: public_address_path, method: :patch do |f| %>

  <table class="col-md-3 offset-md-4">
    <tr>
      <td>
        <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
      </td>
      <td>
        <%= f.text_field :postal_code, required: true, class: "form-control book_body" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :address, "住所" %>
      </td>
      <td>
        <%= f.text_area :address, required: true, class: "form-control book_body" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :name, "宛名" %>
      </td>
      <td>
        <%= f.text_field :name, required: true, class: "form-control book_body" %>
      </td>
    </tr>
  </table>

  <div class="col-md-3 offset-md-7">
    <%= f.submit "変更内容を保存", class: 'btn btn-sm btn-success' %>
  </div>
<% end %>

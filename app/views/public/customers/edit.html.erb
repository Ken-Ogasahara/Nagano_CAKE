<h1>会員情報編集</h1>

<%= form_with model: @customer, url: public_customer_path(current_customer.id), method: :patch do |f| %>

  <table>
    <tr>
      <td>
        <%= f.label :氏名 %>
      </td>
      <td>
        <%= f.text_field :last_name, required: true, class: "form-control book_body" %>
      </td>
      <td>
        <%= f.text_field :first_name, required: true, class: "form-control book_body" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :フリガナ %>
      </td>
      <td>
        <%= f.text_field :last_name_kana, required: true, class: "form-control book_body" %>
      </td>
      <td>
        <%= f.text_field :first_name_kana, required: true, class: "form-control book_body" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :postal_code, "郵便番号" %>
      </td>
      <td>
        <%= f.text_field :postal_code, required: true, class: "form-control book_body" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :address, "住所" %>
      </td>
      <td>
        <%= f.text_area :address, required: true, class: "form-control book_body" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :telephone_number, "電話番号（ハイフンなし）" %>
      </td>
      <td>
        <%= f.text_field :telephone_number, required: true, class: "form-control book_body" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :email, "メールアドレス" %>
      </td>
      <td>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
    <%= link_to "退会する", confirm_public_customers_path, method: :get, class: 'btn btn-sm btn-success' %>
  </div>

<% end %>
